<!DOCTYPE html>
<html>
<head>
  <title>Little To Large</title>
  <!-- <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title> -->
  <link href='https://fonts.googleapis.com/css?family=Libre+Baskerville' rel='stylesheet' type='text/css'>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>

<body>
  <div id="wrapper">
    <!-- Small Navigation -->
    <div class="title-bar" data-responsive-toggle="nav-menu" data-hide-for="medium">

      <button class="menu-icon" type="button" data-toggle></button>
      <div class="title-bar-title">Menu</div>
    </div>

    <!-- Medium-Up Navigation -->
    <nav class="top-bar" id="nav-menu">
      <div class="logo-wrapper hide-for-small-only">
        <div class="logo">

        </div>
      </div>

      <!-- Left Nav Section -->
      <div class="top-bar-left">
        <ul class="vertical medium-horizontal menu">
          <% if current_user %>
          <li id="welcome">Welcome, <%= current_user.first_name %> </li>
          <% end %>
          <li><%= link_to "Home",   root_path %></li>
        </ul>
      </div>

      <!-- Right Nav Section -->
      <div class="top-bar-right">
        <ul class="vertical medium-horizontal menu">

          <% if current_user %>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <li style="display: <%= is_admin ? "" : "none"; %>"><%= link_to "Users", users_path %></li>
          <li><a href="/users/<%= current_user.id %>">My Profile</a></li>
          <% else %>
          <li class="sign_in"><a href="#">Signin</a></li>
          <li><%= link_to "Register", new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>




    <div id="content">
      <%= yield %>
    </div>
 

  <div id="footercontainer">
    <%= render partial: "layouts/footer" %>
  </div>
  
</div>

<script type="text/javascript">$(document).foundation()</script>

</body>
</html>
