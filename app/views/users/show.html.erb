<div class="row">

  <div class="small-2 columns" class="show-for-xlarge-up" id="profile_div">
    <p id="notice"><%= notice %></p>
    <p>
      <strong>Username:</strong>
      <%= @user.username %>
    </p>
    <p>
      <strong>First Name:</strong>
      <%= @user.first_name %>
    </p>
    <p>
      <strong>Last Name:</strong>
      <%= @user.last_name %>
    </p>
    <p>
      <strong>Image:</strong>
      <%= image_tag @user.profile_picture, width: '100', height: '100' %>
    </p>
  </div><!-- profile div two cols -->




  <div class="small-10 columns" id="events_div">

    <div class="row">
      <%= render partial: "layouts/header" %>
    </div>



    <li><%= link_to "New Event", new_event_path %></li>

    <% @user.events.each do |event| %>
    <div class="ind_event">
    <div class="row linetop">

      <div class="small-6 columns">
        <ul><li><%= event.name %></li></ul>
      </div>
          <div class="small-6 columns">
            <ul><li><%= event.location %></li></ul>
          </div>
        </div>
     


      <div class="row">
        <div class="small-12 columns">
          <ul><li><%= event.body %></li></ul>
        </div>
      </div>
    


    <div class="row linebottom">
      <div class="small-6 columns">
        <ul><li><%= event.date %></li></ul>
      </div>

      <div class="small-6 columns">
        <ul><li><%= button_to 'See Full Details', event, :method => :get %></li></ul>
      </div>

      </div>
      </div><!-- ind event -->
      <% end %>



  </div><!-- events div ten cols -->

</div><!-- outercontainer -->





